<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/radial_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_initial" />

    <TextView
        android:id="@+id/hello_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/hello_desc" />

        <ImageButton
            android:id="@+id/help_hello"
            style="@style/ButtonBarButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/hello_desc"
            android:layout_below="@+id/hello_desc"
            android:layout_gravity="center"
            android:background="@drawable/help_inicial" />

        <ImageButton
            android:id="@+id/start_hello"
            style="@style/styleName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/help_hello"
            android:layout_gravity="center" />
    
    <LinearLayout
        android:id="@+id/rodape_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rodape_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/direitosReservados" />

    </LinearLayout>

</LinearLayout>