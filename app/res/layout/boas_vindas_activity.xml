<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cabecalho_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boasVindas" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/corpo_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="410dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/help_imageButtonBoasVindas"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/help_inicial" />

        <ImageButton
            android:id="@+id/start_ImageButton"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/ic_start" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rodape_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rodape_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direitosReservados" />
    </LinearLayout>

</LinearLayout>